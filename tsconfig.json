{
  "compilerOptions": {
    "module": "commonjs",
    "lib": [
      "es2019",
      "dom"
    ],
    "target": "es2019",
    "allowJs": true,
    "checkJs": true,
    "rootDir": "src",
    "strict": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "jsx": "react-jsx",
    "jsxImportSource": "preact",
    "outDir": "dist/types",
    "declaration": true,
    "emitDeclarationOnly": true,
    "removeComments": false
  },
  "files": [
    "src/index.js"
  ],
  "exclude": [
    "node_modules"
  ]
}
